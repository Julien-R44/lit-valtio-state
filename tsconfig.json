{
  "ts-node": {
    "transpileOnly": true
  },

  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2020",
    "module": "esnext",
    "outDir": "dist",
    "lib": ["esnext", "DOM"],
    "types": ["vitest/globals"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
