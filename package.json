{
  "name": "@julr/lit-valtio-state",
  "type": "module",
  "version": "0.0.2",
  "packageManager": "pnpm@7.0.1",
  "description": "🏪 A simple state management library for Lit components.",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/Julien-R44",
  "homepage": "https://github.com/Julien-R44/lit-valtio-state#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Julien-R44/lit-valtio-state.git"
  },
  "bugs": {
    "url": "https://github.com/Julien-R44/lit-valtio-state/issues"
  },
  "keywords": [
    "lit",
    "state-management",
    "store",
    "valtio",
    "web-components",
    "state management"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rimraf dist && unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "prepublishOnly": "nr build",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "lit": "^2.2.7"
  },
  "dependencies": {
    "valtio": "^1.6.3"
  },
  "devDependencies": {
    "@antfu/ni": "^0.17.2",
    "@japa/assert": "^1.3.4",
    "@japa/runner": "^2.0.9",
    "@japa/spec-reporter": "^1.1.12",
    "@julr/eslint-config": "^0.3.1",
    "@types/node": "^18.0.6",
    "bumpp": "^8.2.1",
    "eslint": "^8.20.0",
    "happy-dom": "^6.0.4",
    "lit": "^2.2.7",
    "pnpm": "^7.5.2",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "unbuild": "^0.7.4",
    "vitest": "^0.22.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "openapi-types",
        "react"
      ]
    }
  },
  "eslintConfig": {
    "extends": "@julr",
    "rules": {
      "n/no-unsupported-features/es-syntax": "off"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  }
}
